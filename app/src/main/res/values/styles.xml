<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Top bar Styles -->
    <style name="TopBarIcons">
        <item name="android:layout_marginHorizontal">24sp</item>
        <item name="android:minWidth">48sp</item>
        <item name="android:minHeight">48sp</item>
    </style>
    <style name="TopBar">
        <!-- TODO: Style properly the texts and such for the tab fragments, search box, and sort box -->
        <item name="android:background">@color/maroon_1</item>
        <item name="android:paddingHorizontal">40sp</item>
        <item name="android:paddingVertical">10sp</item>
    </style>
    <style name="TopBarTitle">
        <item name="android:textColor">@color/yellow_1</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TopBarBackButton">
        <item name="android:width">25sp</item>
        <item name="android:height">25sp</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/yellow_1</item>
        <item name="android:paddingRight">10sp</item>
    </style>
    
    <!-- Post View Styles -->
    <style name="PostViewProfilePic">
        <item name="android:minWidth">30sp</item>
        <item name="android:minHeight">30sp</item>
    </style>
    <style name="PostViewFullName">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="PostViewOrgProfilePic">
        <item name="android:minWidth">20sp</item>
        <item name="android:minHeight">20sp</item>
        <item name="android:layout_marginTop">20sp</item>
    </style>
    <style name="PostViewOrg">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:textColor">@color/maroon_1</item>
    </style>
    <style name="PostViewTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_1</item>
    </style>
    <style name="PostViewText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Post Comment -->
    <style name="PostViewComment">
        <item name="android:background">@drawable/bg_post_card</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="PostViewCommentText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Create Post Styles -->
    <style name="CreatePostPostBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="CreatePostLayout">
        <item name="android:paddingVertical">10sp</item>
        <item name="android:paddingHorizontal">15sp</item>
    </style>

    <!-- Item Post Related Styles -->
    <style name="Post20spBold1LineText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextInBetween">
        <item name="android:text">in</item>
        <item name="android:paddingHorizontal">5sp</item>
    </style>
    <style name="PostBody">
        <item name="android:paddingBottom">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="PostVoteCounter">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="PostButton">
        <item name="android:paddingHorizontal">5sp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="Posts">
        <item name="android:background">@drawable/bg_post_card</item>
    </style>
    <style name="PostProfile">
        <item name="android:minHeight">40sp</item>
        <item name="android:minWidth">40sp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Profile -->
    <style name="ProfileProfile">
        <item name="android:minHeight">100sp</item>
        <item name="android:minWidth">100sp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="ProfileOrgItem">
        <item name="android:background">@null</item>
        <item name="android:minHeight">10sp</item>
        <item name="android:minWidth">10sp</item>
    </style>
    <style name="ProfileMasthead">
        <item name="android:background">@color/maroon_1</item>
    </style>
    <style name="ProfileUsername">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ProfileEmail">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/yellow_1</item>
    </style>
    <style name="ProfileDetails">
        <item name="android:paddingTop">10sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_1</item>
    </style>
    <style name="AffiliatedTopBar">
        <item name="android:padding">10sp</item>
    </style>

    <!-- Organization Profiles -->
    <style name="OrgProfile">
        <item name="android:minHeight">100sp</item>
        <item name="android:minWidth">100sp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="OrgOrgItem">
        <item name="android:background">@null</item>
        <item name="android:minHeight">10sp</item>
        <item name="android:minWidth">10sp</item>
    </style>
    <style name="OrgMasthead">
        <item name="android:background">@color/yellow_1</item>
    </style>
    <style name="OrgUsername">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="OrgEmail">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/maroon_2</item>
    </style>
    <style name="OrgDetails">
        <item name="android:paddingTop">10sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_2</item>
    </style>
    <style name="OrgButtonPressed">
        <item name="android:background">@drawable/btn_rounded2</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:colorAccent">@color/black</item>
    </style>
    <style name="OrgButtonUnPressed" parent="">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:backgroundTint">@color/maroon_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:colorAccent">@color/black</item>
    </style>

    <!-- Start Up Styles -->
    <style name="StartupConBot">
        <item name="android:paddingHorizontal">20sp</item>
        <item name="android:maxWidth">400sp</item>
    </style>
    <style name="StartupGreetingText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/yellow_2</item>
    </style>
    <style name="StartupPrimaryButton">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textColor">@color/maroon_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:colorAccent">@color/yellow_1</item>
    </style>
    <style name="StartupEditTextField">
        <item name="android:minHeight">48sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="StartupSecondaryButton">
        <item name="android:background">@drawable/btn_secondary_rounded</item>
        <item name="android:textColor">@color/yellow_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:colorAccent">@color/yellow_1</item>
    </style>
    <style name="StartupSpinner">
        <item name="android:minHeight">48sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:color">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Text Styles -->
    <style name="NormalTextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextLink">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow_2</item>
    </style>

    <!-- Button Styles -->
    <style name="NormalButtonDeactivated">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:textColor">@color/maroon_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:colorAccent">@color/yellow_1</item>
    </style>
    <style name="PlainImageButton">
        <item name="android:background">@null</item>
        <item name="android:minHeight">24sp</item>
        <item name="android:minWidth">24sp</item>
    </style>

    <!-- Input Styles  -->
    <style name="SortSpinner">
        <item name="android:minHeight">42sp</item>
        <item name="android:minWidth">300sp</item>
        <item name="android:maxWidth">300sp</item>
        <item name="android:color">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="NormalCheckbox">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>